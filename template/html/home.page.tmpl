{{template "base" .}}

{{define "title"}}Home page{{end}}

{{define "main"}}
<div class="album py-5">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            {{range .Books}}
            <div class="col">
                <div class="card shadow-sm">
                    {{ if .ImageLink}}
                    <img src="{{.ImageLink}}" class="bd-placeholder-img card-img-top" width="100%" height="450"  alt="">
                    {{ else }}
                    <img src="/static/assets/book_logo512.png" class="bd-placeholder-img card-img-top" width="450" height="100%"  alt="">
                    {{ end }}
                    <div class="card-body">
                        <p class="card-text">{{.Name}} ({{.AltName}})</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/book?id={{.ID}}">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">View info</button>
                                </a>
                            </div>
                            <small class="text-muted"> Rating: {{.Rating}} â˜…</small>
                        </div>
                    </div>
                </div>
            </div>
            {{end}}
        </div>
    </div>
</div>
{{end}}