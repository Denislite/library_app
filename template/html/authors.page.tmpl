{{template "base" .}}

{{define "title"}}Authors{{end}}

{{define "main"}}
<div class="py-3">
    <div class="container">
        <div class="text-center">
            <a href="/authors/create">
                <button type="button" class="btn btn-primary btn-lg px-4 gap-3">Add author</button>
            </a> <br>
        </div>
        <h1 class="h3 mb-3 py-3 fw-normal text-center">Author list:</h1>
        <div class="album">
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-5">
                {{range .Authors}}
                    <div class="col">
                        <div class="card shadow-sm">
                            {{ if .ImageLink}}
                            <img src="{{.ImageLink}}" class="bd-placeholder-img card-img-top" width="100%" height="100%"  alt="">
                            {{ else }}
                            <img src="/static/assets/author_logo.png" class="bd-placeholder-img card-img-top" width="100%" height="100%"  alt="">
                            {{ end }}
                            <div class="card-body">
                                <p class="card-text"> {{.Surname}} {{.Name}} {{.MiddleName}}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="/author?id={{.ID}}">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">View info</button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {{end}}
                </div>
            </div>
        </div>
    </div>
</div>
{{end}}