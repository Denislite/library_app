{{template "base" .}}

{{define "title"}}User {{.User.ID}}{{end}}

{{define "main"}}
<div class="container py-5">
    <div class="main-body">
        {{with .User}}
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="/static/assets/user_logo.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>{{.Surname}} {{.Name}} {{.MiddleName}}</h4>
                                <p class="text-secondary mb-1">Book count: {{.BookCount}}</p>
                                <p class="text-secondary mb-1">Duty count: {{.DutyCount}}</p>
                                <p class="text-muted font-size-sm">Discount ratio: {{.Discount}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{.Email}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{.Address}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Passport data</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{.PassportData}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Birthday</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{.BirthdayDate}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-info " target="__blank" href="/user/give?id={{.ID}}">Give Book</a>
                                <a class="btn btn-info " target="__blank" href="/user/take?id={{.ID}}">Take Book</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{end}}
        </div>
        {{if .Books}}
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-body">
                    {{range .Books}}
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0"> Book ID: {{.ID}}</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <a href="/book?id={{.ID}}">{{.Name}} ({{.AltName}}) </a>
                        </div>
                    </div>
                    {{end}}
                </div>
            </div>
        </div>
        {{end}}
    </div>
</div>
{{end}}